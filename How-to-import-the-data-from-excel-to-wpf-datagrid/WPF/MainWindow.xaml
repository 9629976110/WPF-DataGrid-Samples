<Window x:Class="SfDataGrid_ComboBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:editors="using:Syncfusion.UI.Xaml.C"
        xmlns:local="clr-namespace:SfDataGrid_ComboBoxDemo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Binding Itemsource"
        Width="1024"
        Height="710"
        Icon="App.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <syncfusion:SfDataGrid x:Name="dataGrid"
                               Grid.Column="0"
                               AllowEditing="True"
                               AutoGenerateColumns="True">
        </syncfusion:SfDataGrid>
        <Button Click="Button_Click" Grid.Column="1" Content="Import Data from Excel" Height="100"/>
    </Grid>
</Window>
